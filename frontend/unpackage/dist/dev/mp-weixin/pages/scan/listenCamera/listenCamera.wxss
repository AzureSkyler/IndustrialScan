
.fillMax {
		display: flex;
		flex-direction: column;
		
		width: 100vw;
		height: 100vh;
}
.previewView{
		flex: 12;
}
.takeTools{
		flex: 2;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: #000000;
}
.takePhoto{
		display: flex;
		justify-content: center;
		align-items: center;
		aspect-ratio:1/1;
		height: 50%;
		border: 1.5px solid #ffffff;
		border-radius: 50%;
}
.takePhoto::after{
		display: block;
		content: '';
		aspect-ratio:1/1;
		height: 95%;
		background-color: #ffffff;
		border-radius: 50%;
}
